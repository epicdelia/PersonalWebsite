<%= form_for @post do |f| %>
	 <% if @post.errors.any? %>
	<h2> <% pluralize(@post.errors.count, "error") %> prevented this post from saving: </h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
		<li> <% msg %> </li>
	</ul>
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<%end %>
<%end %>
